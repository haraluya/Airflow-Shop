// Firestore 安全規則 - Airflow B2B 電商平台
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 基礎認證檢查函數
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // 檢查是否為資源擁有者
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // 檢查是否為系統管理員
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isActive == true &&
             get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role in ['admin', 'super_admin'];
    }
    
    // 檢查是否為客戶
    function isCustomer() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'customer';
    }
    
    // 檢查是否為銷售人員
    function isSalesPerson() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['salesperson', 'admin'];
    }

    // 管理員資料 - 管理員可以讀取，超級管理員可以寫入
    match /admins/{adminId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow create: if isAuthenticated(); // 允許初始建立（用於設定腳本）
    }
    
    // 子網域管理 - 管理員可以讀寫
    match /subdomains/{subdomainId} {
      allow read: if isAuthenticated() && isAdmin();
      allow write: if isAuthenticated() && isAdmin();
    }

    // 用戶資料 - 只能讀寫自己的資料
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
      allow create: if isAuthenticated();
    }
    
    // 產品資料 - 客戶可讀取，管理員可寫入
    match /products/{productId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // 產品分類 - 客戶可讀取，管理員可寫入
    match /categories/{categoryId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // 品牌資料 - 客戶可讀取，管理員可寫入
    match /brands/{brandId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // 客戶資料 - 客戶可讀取自己的，銷售和管理員可讀寫所有
    match /customers/{customerId} {
      allow read: if isOwner(customerId) || isSalesPerson() || isAdmin();
      allow write: if isSalesPerson() || isAdmin();
      allow create: if isAuthenticated();
    }
    
    // 訂單資料 - 客戶可讀寫自己的，銷售和管理員可讀寫所有
    match /orders/{orderId} {
      allow read: if isAuthenticated() &&
                     (resource.data.customerId == request.auth.uid || 
                      isSalesPerson() || 
                      isAdmin());
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
                       (resource.data.customerId == request.auth.uid || 
                        isSalesPerson() || 
                        isAdmin());
      allow delete: if isAdmin();
    }
    
    // 報價單資料 - 與訂單相同規則
    match /quotations/{quotationId} {
      allow read: if isAuthenticated() &&
                     (resource.data.customerId == request.auth.uid || 
                      isSalesPerson() || 
                      isAdmin());
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
                       (resource.data.customerId == request.auth.uid || 
                        isSalesPerson() || 
                        isAdmin());
      allow delete: if isAdmin();
    }
    
    // 庫存記錄 - 只有管理員可以讀寫
    match /inventory/{inventoryId} {
      allow read, write: if isAdmin();
    }
    
    // 供應商資料 - 只有管理員可以讀寫
    match /suppliers/{supplierId} {
      allow read, write: if isAdmin();
    }
    
    // 購物車資料 - 用戶只能存取自己的購物車
    match /carts/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // 購物車項目 - 用戶只能存取自己的購物車項目
    match /carts/{userId}/items/{itemId} {
      allow read, write: if isOwner(userId);
    }
    
    // 業務員資料 - 業務員可讀取自己的，管理員可讀寫所有
    match /salespersons/{salespersonId} {
      allow read: if isOwner(salespersonId) || isAdmin();
      allow write: if isAdmin();
      allow create: if isAdmin();
    }
    
    // 推薦碼資料 - 業務員可讀取自己的，管理員可讀寫所有
    match /referralCodes/{referralCodeId} {
      allow read: if isAuthenticated() &&
                     (resource.data.salespersonId == request.auth.uid || 
                      isAdmin());
      allow create: if isSalesPerson() || isAdmin();
      allow update: if isAuthenticated() &&
                       (resource.data.salespersonId == request.auth.uid || 
                        isAdmin());
      allow delete: if isAdmin();
    }
    
    // 推薦碼追蹤記錄 - 業務員可讀取自己的，管理員可讀寫所有
    match /referralTracking/{trackingId} {
      allow read: if isAuthenticated() &&
                     (resource.data.salespersonId == request.auth.uid || 
                      isAdmin());
      allow create: if isAuthenticated(); // 任何人都可以創建追蹤記錄
      allow update: if isAdmin(); // 只有管理員可以更新
      allow delete: if isAdmin();
    }
    
    // 定價群組 - 所有認證用戶可讀取，管理員可寫入
    match /pricingGroups/{pricingGroupId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // 產品價格 - 所有認證用戶可讀取，管理員可寫入
    match /productPrices/{productPriceId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // 報表資料 - 只有管理員和業務員可以讀取
    match /reports/{reportId} {
      allow read: if isSalesPerson() || isAdmin();
      allow write: if isAdmin();
    }
    
    // 系統設定 - 只有管理員可以讀寫
    match /settings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // 統計資料 - 只有管理員可以讀取
    match /stats/{statId} {
      allow read: if isAdmin();
      allow write: if false; // 統計資料只能由後端函數更新
    }

    // 通知資料 - 用戶可以讀取自己的通知，管理員可以讀寫所有
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() &&
                     (resource.data.recipient.id == request.auth.uid || 
                      isAdmin());
      allow create: if isAdmin(); // 只有管理員和系統可以創建通知
      allow update: if isAuthenticated() &&
                       (resource.data.recipient.id == request.auth.uid || 
                        isAdmin()); // 用戶可以標記自己的通知為已讀
      allow delete: if isAdmin();
    }

    // 通知設定 - 用戶可以讀寫自己的設定，管理員可以讀寫所有
    match /notificationSettings/{settingId} {
      allow read, write: if isAuthenticated() &&
                            (resource.data.userId == request.auth.uid || 
                             isAdmin());
      allow create: if isAuthenticated(); // 用戶可以創建自己的設定
    }

    // 通知模板 - 所有認證用戶可讀取，管理員可寫入
    match /notificationTemplates/{templateId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // 媒體檔案 - 認證用戶可讀取，管理員可寫入
    match /media/{mediaId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // 系統日誌 - 只有管理員可以讀取
    match /systemLogs/{logId} {
      allow read: if isAdmin();
      allow write: if false; // 系統日誌只能由後端函數寫入
    }

    // 會員資料（用於前台系統）
    match /members/{memberId} {
      allow read: if isAuthenticated() &&
                     (resource.data.uid == request.auth.uid || 
                      isAdmin());
      allow write: if isAuthenticated() &&
                      (resource.data.uid == request.auth.uid || 
                       isAdmin());
      allow create: if isAuthenticated();
    }

    // 地址資料 - 用戶可以讀寫自己的地址，管理員可以讀寫所有
    match /addresses/{addressId} {
      allow read, write: if isAuthenticated() &&
                            (resource.data.userId == request.auth.uid || 
                             isAdmin());
      allow create: if isAuthenticated();
    }

    // 評價與評論 - 用戶可以讀寫自己的評價，所有人可讀取
    match /reviews/{reviewId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
                       (resource.data.userId == request.auth.uid || 
                        isAdmin());
      allow delete: if isAdmin();
    }

    // 收藏清單 - 用戶可以讀寫自己的收藏
    match /wishlists/{userId} {
      allow read, write: if isOwner(userId);
    }

    // 優惠券 - 所有認證用戶可讀取，管理員可寫入
    match /coupons/{couponId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // 優惠券使用記錄 - 用戶可讀取自己的記錄，管理員可讀寫所有
    match /couponUsages/{usageId} {
      allow read: if isAuthenticated() &&
                     (resource.data.userId == request.auth.uid || 
                      isAdmin());
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }
    
    // 預設拒絕所有其他存取
    match /{document=**} {
      allow read, write: if false;
    }
  }
}